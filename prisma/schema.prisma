// /prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Classe {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}


model Folder {
  id    Int     @id @default(autoincrement())
  name  String
  cours Cours[]
}




model Cours {
  id       Int     @id @default(autoincrement())
  title    String
  url      String
  folder   Folder? @relation(fields: [folderId], references: [id])
  folderId Int?
}

