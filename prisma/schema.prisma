// /prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Activer le mode shadow database pour les migrations
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Classe {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
}


model Folder {
  id    Int     @id @default(autoincrement())
  name  String
  cours Cours[]
}




model Cours {
  id       Int     @id @default(autoincrement())
  title    String
  url      String
  folder   Folder? @relation(fields: [folderId], references: [id])
  folderId Int?
  image    CoursImage?
}

model CoursImage {
  id      Int    @id @default(autoincrement())
  url     String
  cours   Cours  @relation(fields: [coursId], references: [id], onDelete: Cascade)
  coursId Int    @unique
}

